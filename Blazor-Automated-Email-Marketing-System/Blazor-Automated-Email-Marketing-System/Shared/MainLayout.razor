@using System.Timers
@inherits LayoutComponentBase

<PageTitle>@Title</PageTitle>

<div class="page">

    <main>

        <RadzenLayout Style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body'; height: 100%;">
            <RadzenHeader>
                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="5">
                    <RadzenSidebarToggle Click="@(() => _sidebar2Expanded = !_sidebar2Expanded)"/>
                    <RadzenLabel Text="@Title"/>
                </RadzenStack>
            </RadzenHeader>
            <RadzenSidebar @bind-Expanded="@_sidebar2Expanded">

                <RadzenPanelMenu>
                    <RadzenPanelMenuItem Text="Dash" Icon="home" Path="/" />
                    <RadzenPanelMenuItem Text="App Features" Icon="folder">
                        <RadzenPanelMenuItem Text="1.Campaign Automation" Path="Features/01" />
                        <RadzenPanelMenuItem Icon="folder" Text="2.Personalisation" Path="Features/02" />
                        <RadzenPanelMenuItem Icon="folder" Text="3.Segmentation" Path="Features/03" />
                        <RadzenPanelMenuItem Text="4.Analytics" Path="Features/04" />
                        <RadzenPanelMenuItem Text="5.Mobile Friendliness" Path="Features/05" />
                        <RadzenPanelMenuItem Text="6.Dynamic Content" Path="Features/06" />
                        <RadzenPanelMenuItem Text="7.Integrations" Path="Features/07" />
                        <RadzenPanelMenuItem Icon="folder" Text="8.A/B Testing" Path="Features/08" />
                        <RadzenPanelMenuItem Text="9.Drag-and-Drop Editor" Path="Features/09" />
                    </RadzenPanelMenuItem>
                </RadzenPanelMenu>

            </RadzenSidebar>
            <RadzenBody>
                <div class="rz-p-4">
                    <!-- Radzen defined but not loading -->
                    @Body
                </div>
            </RadzenBody>
        </RadzenLayout>
        <RadzenDialog/>
        <RadzenNotification/>
        <RadzenContextMenu/>
        <RadzenTooltip/>

    </main>

</div>


